<Window x:Class="DemoApp.AddBorrowing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoApp"
        mc:Ignorable="d"
        Title="Добавить запись" Height="450" Width="500"
        WindowStartupLocation ="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel
        VerticalAlignment="Center"
        HorizontalAlignment="Center"
        Width="300">

        <TextBlock Text="Имя постояльца" Margin="10"/>
        <TextBox x:Name="fNameTB"/>
        <TextBlock Text="Фамилия постояльца" Margin="10"/>
        <TextBox x:Name="lNameTB"/>
        <TextBlock Text="Отчество постояльца" Margin="10"/>
        <TextBox x:Name="mNameTB"/>
        <TextBlock Text="Номер комнаты" Margin="10"/>
        <ComboBox x:Name="roomCB"/>
        <TextBlock Text="Дата заселения" Margin="10"/>
        <DatePicker x:Name="entryDP" Margin="10"/>
        <Button x:Name="borrowBtn" Content="Забронировать"
                Margin="10" Click="borrowBtn_Click"/>

    </StackPanel>
</Window>
